.projects
  *
    transition all .25s

  a
    border none
    font-size 16px
    overflow hidden
    display inline-block
    margin-bottom 8px
    width 100%
    position relative
    max-height 200px

    &.faded
      opacity 0.2

      img
        -webkit-filter: grayscale(100%) blur(3px);
        filter: grayscale(100%) blur(3px);

    &:hover
      background transparent

      img
        transform scale(1.35)

      .overlay
        opacity 1

  +above(50em)
    a
      width calc(50% - 6px)
      &:nth-of-type(2n)
        margin-right 8px
      &:nth-of-type(4n)
        margin-right 0

  figure
    margin 0
    margin-top -30px

  img
    border none
    max-width 100%
    max-height 200px
    height auto
    display block
    background #ccc
    transition transform .2s ease-in-out

  .overlay
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    height 100%
    width 100%
    opacity 0
    transition .5s ease
    background-color rgba(hover, .75)

  .text
    color sec
    font-size 20px
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    -ms-transform translate(-50%, -50%)
    text-align center

    *
      display block

.tags
  .cat
    cursor pointer

    &.active
      color sec
      border 1px solid sec
      background main

.categories
  font-style italic